{{!< default}}

<main role="main">

	<div class="post-feed">
		{{#foreach posts}}

			{{> "post-card"}}

		{{/foreach}}
	</div>

</main>


{{#contentFor "header"}}
	<div class="site-header" style="background-image: url({{@blog.cover_image}})">
		<div>
			{{#if @blog.logo}}
				<img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
			{{else}}
				<h1>{{@blog.title}}</h1>
			{{/if}}

			<h4>{{@blog.description}}</h4>
		</div>
	</div>
{{/contentFor}}
